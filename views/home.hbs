<div class="w-full rounded bg-white m-4 shadow-lg overflow-y-auto">
  
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">Video Broadcaster</div>
    <div class="flex mt-4">
      <div class="w-1/3">
        <p class="text-gray-700 text-base">
          <ul>
            <li class="my-4"><span class="inline-block bg-blue-200 rounded-full px-3 py-1 text-sm font-semibold  mr-2"><a href="/broadcast">Broadcast Now</a></span></li>
            <li class="my-4"><span class="inline-block bg-green-200 rounded-full px-3 py-1 text-sm font-semibold mr-2 modal-open"><a href="#open-modal">Watch Now</a></span></li>
            <li class="my-4"><span class="inline-block bg-red-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2"><a href="#logout" onclick="event.preventDefault(); document.getElementById('frm-logout').submit();">Logout</a></span></li>
            <form id="frm-logout" action="/logout" method="POST" style="display: none;">
                            <input type="hidden" name="username" value="{{ session.username }}">
                        </form>
          </ul>
          
        </p>
      </div>
      <div class="w-2/3">
        <img src="./assets/art/undraw_video_influencer_9oyy.svg" alt="some image" class="w-full">
      </div>
    
  </div>

  <!--Modal-->
  <div class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center">
    <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
    
    <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
      
      <div class="modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-4 mr-4 text-white text-sm z-50">
        <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
          <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
        </svg>
        <span class="text-sm">(Esc)</span>
      </div>

      <!-- Add margin if you want to see some of the overlay behind the modal-->
      <div class="modal-content py-4 text-left px-6">
        <form action="/watch">
        <!--Title-->
        <div class="flex justify-between items-center pb-3">
          <p class="text-2xl font-bold">Join To Room!</p>
          <div class="modal-close cursor-pointer z-50">
            <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
              <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
            </svg>
          </div>
        </div>

        <!--Body-->
    
          <div class="mb-4 mt-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="id">
                  Broadcast ID
              </label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required id="id" type="text" name="id" placeholder="Broadcast ID">
          </div>
        

        <!--Footer-->
        <div class="flex justify-end pt-2">
          <button class="px-4 bg-green-500 p-3 rounded-lg text-white hover:bg-gray-100 hover:text-indigo-400 mr-2" type="submit">Watch Now</button>
          <button class="modal-close px-4 bg-red-500 p-3 rounded-lg text-white hover:bg-red-400" type="button">Close</button>
        </div>
        </form>
      </div>
    </div>
  </div>
  
</div>